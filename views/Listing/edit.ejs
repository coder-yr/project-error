<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <!-- Form for editing a listing, using PUT method for updating -->
        <form method="post" action="/Listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

            <!-- Title input -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required>
            </div>

            <!-- Description input -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
                Original listing image <br>
                <img src="<%= listing.image.url %>">
            </div>

            <!-- Image link input -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload new Image</label>
                <input name="listing[image]" type="file" class="form-control" >
            </div>

            <div class="row">
                <!-- Price input -->
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control" required>
                </div>

                <!-- Country input -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
                </div>
            </div>

            <!-- Location input -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
            </div>

            <!-- Submit button -->
            <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </form>
    </div>
</div>
